{
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "no-extra-boolean-cast": "off",
        "no-extra-semi": "warn",
        "vue/no-v-model-argument": "off",
        "vue/no-multiple-template-root": "off",
        "quotes": [
            "warn",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ]
    }
}